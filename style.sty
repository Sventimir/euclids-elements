\ProvidesPackage{style}

%% Style
\hypersetup{
    colorlinks=true,
    linkcolor=blue,
    filecolor=magenta,
    urlcolor=cyan,
}

% Set standard fonts (Override scrartcl fontset).
\setkomafont{disposition}{\normalfont\bfseries}

\setlist{
    label=\arabic*.,
    noitemsep
}

\newlist{definitions}{enumerate}{1}
\newlist{postulates}{enumerate}{1}
\newlist{commons}{enumerate}{1}

\setlist[definitions]{ref=defs-\protect\the\value{section}.\arabic*}
\setlist[postulates]{ref=posts-\arabic*}
\setlist[commons]{ref=commons-\arabic*}

