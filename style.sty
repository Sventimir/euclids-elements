\ProvidesPackage{style}

\usepackage{amsthm}

%% Style
\hypersetup{
    colorlinks=true,
    linkcolor=blue,
    filecolor=magenta,
    urlcolor=cyan,
}

% Set standard fonts (Override scrartcl fontset).
\setkomafont{disposition}{\normalfont\bfseries}

\setlist{
    label=\arabic*.,
    noitemsep
}

\newlist{definitions}{enumerate}{1}
\newlist{postulates}{enumerate}{1}
\newlist{commons}{enumerate}{1}

\setlist[definitions]{
    label=\protect\hypertarget{defs-\arabic{section}.\arabic*}{\arabic*}.
}

\setlist[postulates]{
    label=\protect\hypertarget{posts-\arabic*}{\arabic*}.
}
\setlist[commons]{
    label=\protect\hypertarget{commons-\arabic*}{\arabic*}.
}

\renewcommand*{\sectionformat}{\thesection}
\renewcommand{\thesection}{KsiÄ™ga \Roman{section}}

\newtheoremstyle{euclid}% style name
    {0ex} % above space
    {1cm} % below space
    {} % body font
    {} % indent amount
    {\bfseries} % head font
    {} % post head punctuation
    {\newline} % post head space
    {\Large
        \hypertarget{thm-\arabic{section}.\arabic{theorem}}
        \thmname{#1}\thmnumber{ #2}\thmnote{: #3}
    } % head spec

\theoremstyle{euclid}
\newtheorem{theorem}{Twierdzenie}[section]
\renewcommand{\thetheorem}{\Roman{theorem}}

%% Commands

\renewcommand{\qedsymbol}{QED}

\newcommand{\defin}[1]{(\hyperlink{defs-#1}{definicja~#1})}
\newcommand{\post}[1]{(\hyperlink{posts-#1}{postulat~#1})}
\newcommand{\common}[1]{(\hyperlink{commons-#1}{o.z.~#1})}
\newcommand{\prop}[1]{(\hyperlink{thm-#1}{twierdzenie~#1})}

\renewcommand{\bold}[1]{\textbf{#1}}
